enum CategoryStatus {
    ACTIVE
    INACTIVE
}

model CourseCategory {
    id          String  @id @default(uuid())
    name        String
    slug        String  @unique
    description String?

    icon      String?
    thumbnail String?

    // SEO
    metaTitle       String?
    metaDescription String?

    // Hierarchy (Parent â†’ Child category support)
    parentId String?
    parent   CourseCategory?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
    children CourseCategory[] @relation("CategoryHierarchy")

    // Control
    status    CategoryStatus @default(ACTIVE)
    isDeleted Boolean        @default(false)
    order     Int? // For sorting categories manually

    // Relation with Course
    // courses Course[]

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
