// ================= COURSE =================
model Course {
    id               String @id @default(uuid())
    slug             String @unique
    title            String
    shortDescription String
    fullDescription  String

    price         Float
    discountPrice Float?
    level         String
    category      String

    duration     Int // hours
    totalClasses Int

    rating      Float @default(0)
    reviewCount Int   @default(0)

    isPremium  Boolean @default(false)
    isFeatured Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    curriculum   Curriculum[]
    learnings    Learning[]
    requirements Requirement[]
    reviews      Review[]
    faqs         FAQ[]
}

// ================= CURRICULUM =================
model Curriculum {
    id      String @id @default(uuid())
    title   String
    content String
    order   Int

    courseId String
    course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// ================= WHAT YOU WILL LEARN =================
model Learning {
    id      String @id @default(uuid())
    content String

    courseId String
    course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// ================= REQUIREMENTS =================
model Requirement {
    id      String @id @default(uuid())
    content String

    courseId String
    course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// ================= REVIEWS =================
model Review {
    id        String   @id @default(uuid())
    rating    Int
    comment   String
    createdAt DateTime @default(now())

    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    courseId String
    course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// ================= FAQ =================
model FAQ {
    id       String @id @default(uuid())
    question String
    answer   String

    courseId String
    course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}
